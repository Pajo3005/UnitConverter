<CalculatorWindow>:
    name: "Calculator"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            text_size: self.size
            halign: "right"
            font_size: 40
            size_hint: (1, .15)

        GridLayout:
            size_hint: (1, .85)
            cols: 4
            rows: 5

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 20
                text: 'Go Home'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "<<"
                on_press: root.remove()
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear()
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.math_sign("/")

            # Row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                color: 0,0,0,1
                background_normal: ""
                background_color: (177/255, 195/255, 225/255, 1)
